---
import type { Playlist } from "../lib/data";

interface Props {
    playlist: Playlist;
}

const { playlist } = Astro.props;
const { albumId, artists, color, cover, id, title } = playlist;

const artistsString = artists.join(", ");
---

<a
    href={`/playlist/${id}`}
    class="playlist-item w-44 rounded-md flex-col transition-all hover:shadow-xl bg-zinc-500/30 duration-300 shadow-lg flex relative p-2 overflow-hidden items-start gap-2 hover:bg-zinc-800"
    transition:name=`playlist ${id} box`
>
    <picture class="h-auto aspect-square w-full flex-none">
        <img
            src={cover}
            alt={`Cover of ${title} by ${artistsString}`}
            class="object-cover w-full h-full rounded-md"
            transition:name=`playlist ${id} image`
        />
    </picture>
    <div class="flex flex-auto flex-col truncate">
        <h4
            class="text-white text-sm"
            transition:name=`playlist ${playlist?.id} title`
        >
            {title}
        </h4>
        <span class="text-xs text-gray-300"
        transition:name=`playlist ${playlist?.id} artists`>{artistsString}</span>
    </div>
</a>
